<UserControl x:Class="QuickConfig.MVVM.View.UserControls.WelcomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuickConfig.MVVM.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="920">

    <Border Background="White"
            CornerRadius="0,0,10,10">

        <Grid>

            <TextBlock Text="Mouse Settings Hub"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Center"
                   Foreground="Black"
                   FontSize="40"
                   FontWeight="Black"
                   Margin="0,222,0,0"/>

            <Button Content="Get Started"
                Width="276"
                Height="60"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,300,0,0"
                Padding="5"
                FontSize="16"
                FontWeight="Bold"
                FontFamily="Arial"
                Style="{StaticResource OutlinedRoundedButtonGreen}"
                Command="{Binding WelcomeViewCommand}"/>

        </Grid>
    </Border>
</UserControl>
